#include<stdio.h>               // done
void bubble(int *a, int *n)
{
	int pass,j;
	int tmp;
	bool xchange = true;
	for(pass = 1 ; pass < *n && xchange == true ; pass++)
	{
		xchange = false;
		for (j = 0; j < *n-pass ; j++)
		{
			if(a[j]>a[j+1])
			{
				tmp = a[j];
				a[j]=a[j+1];
				a[j+1]= tmp;
				xchange = true;
			}
		}
	}
	printf("\nsorted\n");
	for (int i=0 ; i<*n ; i++)
	{
		printf("\n%d",a[i]);
	}	
}
